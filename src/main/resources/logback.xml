<configuration monitorInterval="1">

    <property name="FILE_LOG_PATTERN" value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
    <property name="SERVING_FILE_LOG_PATTERN" value="%d{HH:mm:ss} %-5level %logger{36} - %msg%n"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <param name="append" value="false"/>

        <encoder>
            <Pattern>${FILE_LOG_PATTERN}</Pattern>
        </encoder>
    </appender>

    <appender name="SERVING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <Pattern>${SERVING_FILE_LOG_PATTERN}</Pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>async-engine.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>

    <logger name="tsakiris.fotis.async.engine">
        <level value="ALL"/>
        <!--<level value="INFO"/>-->
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="SERVING_FILE"/>
    </logger>

</configuration>